{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="min-height: 400px; width:400px; background: url({{ member.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Member</div>
            <div>{{ member.name }}</div> 
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{ member.email }}</div> 
        </div>

        <div class="item">
            <div>Aniversário</div>
            <div>{{ member.birth }}</div> 
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{ "Masculino" if member.gender == "M" else "Femino"}}</div> 
        </div> 

        <div class="item">
            <div>Tipo Sanguíneo</div>
             <div>{{member.blood}}</div> 
        </div> 

        <div class="item">
            <div>Peso (kg)</div>
            <div>{{member.weight}}</div> 
        </div> 

        <div class="item">
            <div>Altura (m)</div>
            <div>{{member.height}}</div> 
        </div> 



        <a href="/members/{{member.id}}/edit" class="button">Editar</a>
    </section>
</div>

{% endblock content %}